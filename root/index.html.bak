<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Transparent Ripple Effect</title>
    <style>
        body {
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #000;
        }

        .image-container {
            position: relative;
            overflow: hidden;
            display: inline-block;
        }

        .image-container img {
            width: 100%;
            height: auto;
            display: block;
        }

        .ripple {
            position: absolute;
            width: 80px; /* Smaller starting ripple */
            height: 80px;
            background: transparent;
            border-radius: 50%;
            pointer-events: none;
            transform: scale(1);
            opacity: 0.7;
            animation: ripple-animation 1s ease-out;
            filter: url(#rippleEffect); /* Applies SVG distortion effect */
        }

        @keyframes ripple-animation {
            0% {
                transform: scale(1);
                opacity: 0.6;
            }
            50% {
                transform: scale(3);
                opacity: 0.4;
            }
            100% {
                transform: scale(4);
                opacity: 0;
            }
        }
    </style>
</head>
<body>

    <svg width="0" height="0">
        <defs>
            <filter id="rippleEffect">
                <feTurbulence type="fractalNoise" baseFrequency="0.02" numOctaves="3" result="turbulence"/>
                <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="10"/>
            </filter>
        </defs>
    </svg>

    <div class="image-container">
        <img src="https://static.wixstatic.com/media/3fe6e1_02a56c9991654cf8a070afc2fd98683d~mv2.jpg" id="rippleImage" alt="Ripple Effect Image">
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const imageContainer = document.querySelector(".image-container");

            imageContainer.addEventListener("mousemove", function (event) {
                let rect = imageContainer.getBoundingClientRect();
                let x = event.clientX - rect.left;
                let y = event.clientY - rect.top;

                let ripple = document.createElement("div");
                ripple.classList.add("ripple");
                ripple.style.left = `${x - 40}px`; /* Centers the ripple */
                ripple.style.top = `${y - 40}px`;

                imageContainer.appendChild(ripple);

                setTimeout(() => {
                    ripple.remove();
                }, 1000);
            });
        });
    </script>

</body>
